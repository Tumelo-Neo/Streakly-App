<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Streakly" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/dark_teal</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <!-- Card colors -->
        <item name="colorSurfaceVariant">@color/white</item>
    </style>

    <style name="Theme.Streakly" parent="Base.Theme.Streakly" />

    <!-- Light theme - Pure Black & White -->
    <style name="Theme.Streakly.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Surface colors for light mode -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurfaceVariant">@color/white</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <!-- Text colors -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <!-- Dark theme - Original Colorful Theme -->
    <style name="Theme.Streakly.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/dark_teal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Surface colors for dark mode -->
        <item name="colorSurface">@color/dark_teal</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/medium_teal</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/dark_teal</item>
        <item name="android:statusBarColor">@color/dark_teal</item>
        <!-- Text colors -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/teal_200</item>
    </style>

    <!-- Add this to your themes.xml file -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">cursive</item>
        <item name="android:fontFamily">cursive</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.Streakly.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/dark_teal</item>
        <item name="android:statusBarColor">@color/dark_teal</item>
    </style>
</resources>