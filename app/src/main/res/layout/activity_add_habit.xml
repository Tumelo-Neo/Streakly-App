<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_new_habit"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Habit Title -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:minHeight="60dp"
            app:boxBackgroundColor="?android:attr/colorBackground"
            app:hintTextColor="?android:attr/textColorSecondary"
            app:boxStrokeColor="?attr/colorPrimary"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etHabitTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="@string/habit_title"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Category -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:minHeight="60dp"
            app:boxBackgroundColor="?android:attr/colorBackground"
            app:hintTextColor="?android:attr/textColorSecondary"
            app:boxStrokeColor="?attr/colorPrimary"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="@string/category"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Frequency -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frequency"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgFrequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbDaily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/daily"
                android:textColor="?android:attr/textColorPrimary"
                android:buttonTint="?attr/colorPrimary"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbWeekly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/weekly"
                android:textColor="?android:attr/textColorPrimary"
                android:buttonTint="?attr/colorPrimary" />

            <RadioButton
                android:id="@+id/rbCustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/custom"
                android:textColor="?android:attr/textColorPrimary"
                android:buttonTint="?attr/colorPrimary" />

        </RadioGroup>

        <!-- Days of Week Selection - Initially Hidden -->

        <LinearLayout
            android:id="@+id/daysSelectionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Days:"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/daysContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="4dp" />

        </HorizontalScrollView>
    </LinearLayout>

        <!-- Reminder Time -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reminder_time"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnReminderTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/set_reminder_time"
            android:textColor="?attr/colorPrimary"
            android:background="?android:attr/colorBackground"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <!-- Start Date -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_date"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/select_start_date"
            android:textColor="?attr/colorPrimary"
            android:background="?android:attr/colorBackground"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <!-- Notes -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:minHeight="140dp"
            app:boxBackgroundColor="?android:attr/colorBackground"
            app:hintTextColor="?android:attr/textColorSecondary"
            app:boxStrokeColor="?attr/colorPrimary"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:minHeight="120dp"
                android:gravity="top"
                android:hint="@string/notes"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:inputType="textMultiLine" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveHabit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/save_habit"
            android:textColor="@color/white"
            android:backgroundTint="?attr/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp" />

        <!-- Cancel Button -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/cancel"
            android:textColor="?attr/colorPrimary"
            android:background="@android:color/transparent"
            android:layout_marginTop="8dp"
            style="@style/Widget.AppCompat.Button.Borderless" />

    </LinearLayout>

</ScrollView>